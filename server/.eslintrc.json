// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2017
  },
  "rules": {
    "no-console": "off",
    "require-jsdoc": "off",
    "comma-dangle": "off",
    "max-len": [ "warn", {
      "code": 240
    }],
    "indent": ["error", 2]
  }
}
